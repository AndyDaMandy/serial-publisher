<%= form_with url: users_path, method: :get, class: "rounded-md outline-none px-3 py-2 mt-2" do |form| %>
  <%= form.text_field :search, placeholder: "Search Authors" %>
  <%= form.submit "Search", class: "text-amber-900 hover:text-amber-700" %> | 
  <%= link_to "Clear Search", users_path, class: "text-amber-900 hover:text-amber-700"%>
<% end %>

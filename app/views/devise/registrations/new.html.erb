<div class="mx-auto md:w-2/3 w-full">
<h2 class="font-bold text-4xl">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "contents") do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="my-5">
    <%= f.label :email, "Email - Required" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="my-5">
    <%= f.label :username, "Username - Required - note you cannot change you username later!" %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
  </div>

  <div class="my-5">
    <%= f.label :password, "Password - required" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="my-5">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <div class="my-5">
    <%= f.label :about, "About - Tell us a bit about yourself! What kind of stories will you write?" %><br />
    <%= f.text_area :about, :rows => 10, :cols => 50, autofocus: true, autocomplete: "about" %>
  </div>
  <div class="my-5">
    <%= f.label :favorite_quote, "Favorite Quote - This might be hard, but let us know your favorite quote!"%><br />
    <%= f.text_area :favorite_quote, :rows => 10, :cols => 50, autofocus: true, autocomplete: "favorite_quote" %>
  </div>

  <div class="inline">
    <%= f.submit "Sign up", class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
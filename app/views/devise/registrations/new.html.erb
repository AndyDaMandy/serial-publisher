<h2 class="font-bold text-4xl">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "contents") do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="my-5">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="my-5">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
  </div>

  <div class="my-5">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="my-5">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <div class="my-5">
    <%= f.label :about %><br />
    <%= f.text_area :about, autofocus: true, autocomplete: "about" %>
  </div>
  <div class="my-5">
    <%= f.label :favorite_quote %><br />
    <%= f.text_area :favorite_quote, autofocus: true, autocomplete: "favorite_quote" %>
  </div>

  <div class="inline">
    <%= f.submit "Sign up", class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
